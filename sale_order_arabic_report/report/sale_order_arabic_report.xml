<odoo>
<data>
    <report
        id="sale_order_arabic_report_id"
        model="sale.order"
        string="sale order arabic"
        name="sale_order_arabic_report.sale_order_template_id"
        file="sale_order_arabic_report.sale_order_arabic_report_id"
        report_type="qweb-pdf" />

<template id="sale_order_template_id">
    <t t-call="web.external_layout">
     <t t-call="web.html_container">
          <t t-set="x" t-value="0" />
          <t t-foreach="docs" t-as="o">
                <t t-set="emp_count" t-value="0"/>
                 <div class="page" dir="rtl">
                    <style type="text/css">
                        .td-y {
                        border: 1px solid #000000;
                        text-align: center;
                        font-family:Droid Arabic Naskh,serif;
                        }
                        .th-x{
                        font-family:Droid Arabic Naskh,serif;
                        <!--background-color: #32CD32 !important;-->
                        border: 1px solid #000000;
                        text-align: center;
                        }
                        .strong-x{
                        border:none;
                        text-align: center;
                        }


                    </style>

                    <br/>
                    <br/>

                     <table dir="rtl" class='table' style="float:left; border-color:#000000 " width="100%">
                         <tr>
                            <td colspan="2"><h3>الرقم</h3></td>
                             <td colspan="2">
                                <span t-field="o.name"/>
                             </td>
                         </tr>
                         <tr>
                             <td style="width=100;text-align: center;">العميل</td>
                             <td  style="width=100;text-align: center;"><span t-field="o.partner_id.name"/></td>
                             <td style="width=200;text-align: center;">تاريخ الامر</td>
                             <td style="width=200;text-align: center;"><span t-field="o.date_order"/></td>
                         </tr>
                         <!--<tr>-->
                            <!--<td style="width=100;text-align: center;">End Date</td>-->
                            <!--<td  style="width=100;text-align: center;"><span t-field="o.end_start"/></td >-->
                            <!--<td style="width=200;text-align: center;">Requested By</td>-->
                            <!--<td  style="width=200;text-align: center;"><span t-field="o.requested_by.name"/></td>-->
                         <!--</tr>-->
                     </table>

                    <br/>
                    <br/>
                    <br/>

                    <table class='table table-bordered ' style="border-color:#32CD32 " width="100%">
                        <thead style="border-color:#32CD32">
                            <th style="border-color:#000000;text-align: center;" class="th-x" width="25 %">المنتج</th>
                            <th style="border-color:#000000 ;text-align: center;" class="th-x" width="25 %" >الوصف</th>
                            <th style="border-color:#000000;text-align: center;" class="th-x" width="15 %">الكميه</th>
                            <th style="border-color:#000000;text-align: center;" class="th-x" width="15 %">الوحده</th>
                            <th style="border-color:#000000;text-align: center;" class="th-x" width="20 %">السعر</th>
                        </thead>
                        <tbody>
                            <t t-foreach="o.order_line" t-as="line">
                                <tr>

                                    <td class="td-y" style="border-color:#000000;text-align: center;">
                                        <span t-field="line.product_id"/>
                                    </td>
                                    <td class="td-y" style="border-color:#000000;text-align: center;">
                                           <span t-field="line.product_id.name"/>
                                    </td>
                                    <td class="td-y" style="border-color:#000000;text-align: center;">
                                        <span t-field="line.product_uom_qty"/>
                                    </td>
                                    <td class="td-y" style="border-color:#000000;text-align: center;">
                                        <span t-field="line.product_uom.name"/>
                                    </td>
                                    <td class="td-y" style="border-color:#000000;text-align: center;">
                                        <span t-field="line.price_subtotal"/>
                                    </td>

                                </tr>
                            </t>
                        </tbody>

                    </table>
                </div>
         </t>
</t>
    </t>


</template>

</data>
</odoo>